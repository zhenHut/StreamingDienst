<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Hintergrund Farbe-->
    <LinearGradientBrush x:Key="BackgroundGradient" 
        EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="Black" Offset="0"/>
        <GradientStop Color="#FF0483B9"
                      Offset="1" />
    </LinearGradientBrush>
    
    <!-- TitleBar Hintergrund -->
    <SolidColorBrush x:Key=" TitlebarBackgroundBrush"
                     Color="#FF2d2D30" />
    
    <!-- Schriftfarbe -->
    <SolidColorBrush x:Key="FontForegroundBrush"
                     Color="#FFA9B116" />
    
    <!-- Button Hintergrund -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush"
                     Color="#FF293801" />
</ResourceDictionary>